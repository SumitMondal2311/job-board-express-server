{
    "name": "job-board-server",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "build": "pnpm clear && pnpm clear-logs && tsc",
        "clear-logs": "rimraf logs",
        "clear": "rimraf dist",
        "postinstall": "pnpm prisma generate",
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "type-check": "tsc --noEmit",
        "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts,json --exec ts-node src/server.ts",
        "start": "pnpm build && node dist/server.js",
        "test:e2e": "cross-env NODE_ENV=test jest",
        "test:integration": "cross-env NODE_ENV=test jest tests/integration",
        "test:unit": "cross-env NODE_ENV=test jest tests/unit",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Sumit Mondal",
    "license": "ISC",
    "packageManager": "pnpm@10.9.0",
    "dependencies": {
        "@prisma/client": "6.6.0",
        "@upstash/redis": "^1.34.8",
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "prisma": "^6.6.0",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0"
    }
}
